<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/dp110"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="@dimen/dp110"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp10" >
        <TextView
            android:id="@+id/txtEventName"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/txtEventTime"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="@string/next_eventt"
            style="@style/header_title_bold_17px"
            android:textSize="@dimen/sp15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left"/>
        <TextView
            android:id="@+id/txtEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24.05-10h"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/list_arrow"
            android:drawablePadding="@dimen/dp10"
            android:textSize="@dimen/sp11"
            android:layout_marginTop="@dimen/dp5"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:layout_alignParentRight="true"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toLeftOf="@+id/txtEventTime"
            android:layout_below="@+id/txtEventName">
            <LinearLayout
                android:id="@+id/catgList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</android.support.v7.widget.CardView>
