<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/close_white"
                android:background="@null"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/filter"
                android:layout_marginLeft="80dp"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/resetfilter"
                android:gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout1"
            android:id="@+id/relativelay">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/period"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="50dp"
                android:background="@color/annotationHyperlinkPreviewLabel"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativelay">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/catogory"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/textViewcat"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewcat"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner"
                >

            </Spinner>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp30"
                    android:text="107 Programs found"
                    android:id="@+id/buttonMore"
                    android:background="@drawable/btn_selector"
                    android:gravity="center"
                    android:textSize="@dimen/sp15"
                    android:textAllCaps="false"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@drawable/btn_text_selector"
                     />





        </RelativeLayout>









    </RelativeLayout>

</ScrollView>
