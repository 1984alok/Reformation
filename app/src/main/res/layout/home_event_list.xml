<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/dp110"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    android:background="@color/light_blue">
    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="@dimen/dp110"
        android:background="@color/light_blue"
        android:orientation="vertical"
       android:padding="@dimen/dp5" >
        <TextView
            android:id="@+id/txtEventName"
            android:transitionName="txtEventName"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="@string/next_eventt"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:gravity="center"/>
        <TextView
            android:layout_below="@+id/txtEventName"
            android:id="@+id/txtEventTime"
            android:transitionName="txtEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_eventt"
            style="@style/header_title_15px"
            android:textColor="@color/text_color_six"
            android:layout_marginTop="@dimen/dp5"
            android:layout_gravity="left"
            android:gravity="center"/>
        <LinearLayout
            android:layout_below="@+id/txtEventTime"
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/catgList"
            android:transitionName="catgList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frameArrow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="@dimen/dp110"
        android:background="@color/light_blue"
        android:orientation="vertical"
        android:padding="@dimen/dp5"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/txtEventName1"
            android:transitionName="txtEventName"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="@string/next_eventt"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_toRightOf="@+id/txtEventName1"
            android:id="@+id/goto_img"
            android:layout_marginRight="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_to"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_below="@+id/txtEventName1"
            android:id="@+id/txtEventTime1"
            android:transitionName="txtEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_eventt"
            style="@style/header_title_15px"
            android:textColor="@color/text_color_six"
            android:layout_marginTop="@dimen/dp5"
            android:layout_gravity="left"
            android:gravity="center"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_below="@+id/txtEventTime1"
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/catgList1"
            android:transitionName="catgList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
